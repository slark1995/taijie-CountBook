<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taijie_countbook.Edit"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="107dp"
        android:layout_height="45dp"
        android:layout_marginTop="29dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="52dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/increase"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="8dp"
        android:onClick="increase"
        android:text="+1"
        app:layout_constraintBaseline_toBaselineOf="@+id/decrease"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/decrease" />

    <Button
        android:id="@+id/decrease"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="8dp"
        android:onClick="decrease"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_value"
        app:layout_constraintVertical_bias="0.353" />

    <Button
        android:id="@+id/reset"
        android:layout_width="83dp"
        android:layout_height="45dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="8dp"
        android:onClick="reset"
        android:text="reset"
        app:layout_constraintBaseline_toBaselineOf="@+id/delete"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/delete" />

    <TextView
        android:id="@+id/item_value"
        android:layout_width="107dp"
        android:layout_height="45dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="45dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name" />

    <TextView
        android:id="@+id/value"
        android:layout_width="107dp"
        android:layout_height="45dp"
        android:text="amount:"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_value"
        app:layout_constraintRight_toLeftOf="@+id/item_value"
        android:layout_marginRight="63dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/delete"
        android:layout_width="83dp"
        android:layout_height="45dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="79dp"
        android:onClick="delete"
        android:text="Delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decrease" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="107dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="63dp"
        android:text="Name:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_name"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="107dp"
        android:layout_height="45dp"
        android:layout_marginLeft="54dp"
        android:text="Comment:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_comment"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_comment"
        android:layout_width="107dp"
        android:layout_height="45dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="34dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_value" />
</android.support.constraint.ConstraintLayout>
