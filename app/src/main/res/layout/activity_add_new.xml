<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taijie_countbook.AddNewActivity">

    <EditText
        android:id="@+id/nameText"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/edit_name"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="19dp" />

    <EditText
        android:id="@+id/valueText"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="@string/edit_number"
        android:inputType="number"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <EditText
        android:id="@+id/commentText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="@string/edit_comment"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueText" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:onClick="createCounter"
        android:text="@string/button_confirm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="65dp"
        android:layout_height="38dp"
        android:layout_marginRight="32dp"
        android:text="Name:"
        app:layout_constraintBaseline_toBaselineOf="@+id/nameText"
        app:layout_constraintRight_toLeftOf="@+id/nameText" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="63dp"
        android:layout_height="38dp"
        android:layout_marginRight="34dp"
        android:text="Number:"
        app:layout_constraintBaseline_toBaselineOf="@+id/valueText"
        app:layout_constraintRight_toLeftOf="@+id/valueText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:text="Comment:"
        app:layout_constraintRight_toLeftOf="@+id/commentText"
        android:layout_marginRight="27dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/commentText" />

</android.support.constraint.ConstraintLayout>
